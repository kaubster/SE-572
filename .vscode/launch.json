    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach",
            "port": 3001,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\films\\server.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Website",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\web\\bin\\www"
        }
    ]
}